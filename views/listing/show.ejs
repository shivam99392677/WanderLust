<%- layout("/layouts/boilerplate.ejs") %>

<div class="row">
  <div class="col-md-8 offset-md-2">
    <div class="col-12 md-3 mt-3">
      <h4><%= list.title %></h4>
    </div>

    <div class="col-12">
      <div class="card">
        <img
          src="<%= list.image.url %>"
          class="card-img-top show-img mb-3"
          alt="listing_image"
        />
        <div class="card-body">
          <p class="card-text">
            <%= list.description %> <br />
            <hr />
            <b>â‚¹<%= list.price ? list.price.toLocaleString('en-IN') : "Not Available" %>/night/night</b><br />
            <%= list.country %> <br />
            <%= list.location %>
          </p>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-6 mb-4">
        <a href="/listings/<%= list._id %>/edit" class="btn btn-secondary w-100"
          >Edit</a
        >
      </div>
      <div class="col-6 mb-4"> <form method="post" action="/listings/<%= list._id %>?_method=DELETE">
      <button class="btn btn-danger w-100">Delete</button>
    </form></div>
    </div>
    <hr>
  <div class="row">
    <div class=" mb-4">
      <form method="post" action="/listings/<%= list._id %>/reviews" class="needs-validation" novalidate>
        <h4>Please give your feedback</h4>
        <div>
          <label for="rating" class="form-label">Rating</label>
          <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-range">
        </div>

        <div>
          <label for="comment" class="form-label">Comment</label>
          <textarea name="review[comment]" id="comment" class="form-control"row="5" required></textarea>
          <div class="invalid-feedback">
            Please write a comment
          </div>
        </div>

        <div class="mt-3">
          <button class="btn btn-outline-secondary" type="submit">
            Submit
          </button>
        </div>
      </form>
    </div>
  </div>
   
  </div>
  
</div>
